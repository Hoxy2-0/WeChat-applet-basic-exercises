/**index.wxss**/
.selection{
  border-bottom: 5px solid #ddd;
}
.header {
  border-left-width: 2px;
  border-left-style: solid;
  border-left-color: limegreen;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  padding: 0 10rpx 0 10rpx;
  margin-top:10rpx;
  margin-bottom: 10rpx;
}

.text-all {
  color: green;
  font-size: 10px;
}

.content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}

.content-item {
  height: 250rpx;
  width: 45%;
  background-color: firebrick;
  margin: 2px;
  position: relative;
}

.content-item image {
  width: 100%;
  height: 100%;
}

.content-item-text {
  position: absolute;
  bottom: 0px;
  color: white;
  font-size: 10px;
  background: -webkit-linear-gradient(bottom, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0));
  height: 125rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  padding-bottom: 1%;
}

.list-item {
  height: 500rpx;
  width: 100%;
}

.list-item-imges {
  position: relative;
  height: 300rpx;
}

.banner {
  height: 300rpx;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -75rpx;
  right: 50rpx;
}

.list-item-text {
  height: 200rpx;
  width: 100%;
  margin-top: 20rpx;
}

.list-item-text-title {
  font-weight: 700;
  margin-top: 20rpx;
  padding-left: 2%;
  padding-right: 10rpx;
}

.list-item-text-content {
  font-size: 10px;
  color: rgb(88, 88, 88);
  margin-top: 20rpx;
}
